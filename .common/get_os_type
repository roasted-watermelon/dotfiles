get_os_type() {
  local defined_oses=(
    "arch"
    "debian"
  )

  local ID=`awk -F= '$1=="ID" { print $2 ;}' /etc/os-release | sed -e 's/^"//' -e 's/"$//'`
  local ID_LIKE=`awk -F= '$1=="ID_LIKE" { print $2 ;}' /etc/os-release | sed -e 's/^"//' -e 's/"$//'`

  local os

  for os in "${defined_oses[@]}"; do
    if [[ "${ID_LIKE,,}" == "$os" || "${ID,,}" == "$os" ]]; then
      echo "$os"
      break
    fi
  done
}
